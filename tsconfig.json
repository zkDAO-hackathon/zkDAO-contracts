{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,

		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"]
		}
	},

	"include": [
		"./deploy",
		"./hardhat.config.ts",
		"./scripts",
		"./test",
		"./typechain-types/**/*"
	],

	"exclude": ["node_modules"],

	"typeRoots": ["./types", "./typechain-types", "./node_modules/@types"]
}
